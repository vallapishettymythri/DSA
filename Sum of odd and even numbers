#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;

int main() {
    int n; //intialising n as integer data type
    cin >> n; //taking user input n
    int even=0; //intialising even as 0 ( starting)
    int odd=0;  //intialising odd as 0 (starting)
    for(int i=0;i<=n;i++) //starting from i=0, i is less than or equal to n, i++)
    if(i%2==0){ //if i is divided by 2 and remainder is zero added to even. 
        even+=i; //even=even+i
    }else{
        odd+=i; //else odd=odd+i
    }
    cout << odd << " " << even;  //print odd and even numbers as outputs.
    return 0;
}
